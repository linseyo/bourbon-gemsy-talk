<h1> Written among the stars... </h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= link_to 'Read More', post_path(post) %></td>
      <td>|</td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td>|</td>
      <td><%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <%= link_to 'New Post', new_post_path %>
</table>
